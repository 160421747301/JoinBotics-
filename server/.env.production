# .env.production - Production Email Configuration

# Use this template when deploying to production
# Replace all values with your actual production credentials

# Email Service Configuration
EMAIL_SERVICE=gmail
EMAIL_USER=your-production-email@domain.com
EMAIL_PASSWORD=your-app-password-or-api-key
EMAIL_FROM=noreply@domain.com

# Email Recipients
CONTACT_FORM_EMAIL=contact@domain.com
CAREERS_FORM_EMAIL=careers@domain.com

# Server Configuration
PORT=5000
NODE_ENV=production

# Frontend URL (Production Domain)
FRONTEND_URL=https://yourdomain.com

# Optional: Additional Security
# RATE_LIMIT_WINDOW=900000
# RATE_LIMIT_MAX_REQUESTS=5
# SMTP_TIMEOUT=10000
